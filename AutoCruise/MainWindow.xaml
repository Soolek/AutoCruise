<Window x:Class="AutoCruise.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="MainWindow" Height="350" Width="525" Closing="Window_Closing">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
            <Button Width="200" Height="30" Content="Start Crusing!" Click="Button_Click"></Button>

            <StackPanel Orientation="Horizontal">
                <Label Content="Perspective"/>
                <xctk:DoubleUpDown Increment=".01" Value="{Binding Parameters.PerspectiveAmount, Mode=TwoWay}" Height="20"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Content="SobelAvgOutFilter"/>
                <xctk:DoubleUpDown Increment="1" Value="{Binding Parameters.SobelAvgOutFilter, Mode=TwoWay}" Height="20"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Content="MinClusterHeight"/>
                <xctk:DoubleUpDown Increment="1" Value="{Binding Parameters.MinClusterHeight, Mode=TwoWay}" Height="20"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
